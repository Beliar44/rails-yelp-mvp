<h1>List of restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, restaurant%>
      <%= link_to "Delete",
            restaurant_path(restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
    </li>
 <% end %>
</ul>

<%= link_to  "add new restaurant", new_restaurant_path %>
